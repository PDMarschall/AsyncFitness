@page
@using AsyncFitness.Core.Models.Facility
@using AsyncFitness.Core.Models.User
@model AsyncFitness.Web.Areas.Fitness.Pages.IndexModel
@{
    ViewData["Title"] = "Overview";
}


<h1>Overview</h1>
<h2>Bookings</h2>

<table class="table">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserBookings.First().Concept.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserBookings.First().Location.Name)
                </th>
                <th>                    
                    @Html.Raw("Instructor(s)")
                </th>
                <th>
                    @Html.Raw("Time")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (GroupFitnessClass item in Model.UserBookings)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Concept.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.Name)
                    </td>
                    <td>
                        <div>
                            @foreach (Trainer trainer in item.Instructors)
                            {
                                @Html.Raw(trainer.FirstName + " " + trainer.LastName)
                            }
                            @*@Html.DisplayFor(modelItem => item.BookedParticipants.Count)/@Html.DisplayFor(modelItem => item.Location.Capacity)*@
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Start.DayOfWeek)
                        @String.Format("{0:d MMMM HH:mm}", item.Start)
                    </td>
                    <td>
                        <a>Check-In</a> |
                        <a>Cancel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



