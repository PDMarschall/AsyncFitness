@page "{id:int?}"
@model AsyncFitness.Web.Areas.Fitness.Pages.CancelModel
@{
}
@{
    ViewData["Title"] = "Cancel";
}

<h1>Cancel</h1>

<h3>Are you sure you want to cancel this booking?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingToConfirmCancel.ConceptName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingToConfirmCancel.ConceptName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingToConfirmCancel.LocationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingToConfirmCancel.LocationName)
        </dd>
        <dt class="col-sm-2">
            @Html.Raw("Instructor(s)")
        </dt>
        <dd class="col-sm-10">
            <div>
                @foreach (string name in Model.BookingToConfirmCancel.InstructorNames)
                {
                    @Html.Raw(name)
                }
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingToConfirmCancel.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingToConfirmCancel.Time)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="BookingToConfirmCancel.GroupFitnessClassId" />
        <input type="submit" value="Cancel Booking" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-success">Return to Overview</a>
    </form>
</div>